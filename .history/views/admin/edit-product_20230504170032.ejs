<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/product.css">
  </head>
<%- include('../includes/navigation.ejs') %>
<main>
    <form class="product-form" action="/admin/edit-product/" method="PUT">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<%= product.title?product.title:''%>">
        </div>
        <div class="form-control">
            <label for="imageUrl">Image URL</label>
            <input type="text" name="imageUrl" id="imageUrl"  value="<%=product.imageUrl?product.imageUrl:''%>">
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" step="0.01" value="<%= product.price? product.price:''%>">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea  name="description" id="description" rows="5" value="<%= product.description?product.description:''%>">

        </div>

        <button class="btn" type="submit"><%if(editing){%>update Product<%} else%></button>
    </form>
</main>
<%- include('../includes/end.ejs') %>